  "license": "ISC",
  "dependencies": {
    "@azure/identity": "^4.13.0",
    "@azure/keyvault-secrets": "^4.10.0",
    "axios": "^1.13.4",
    "findup-sync": "^5.0.0",
    "nconf": "^0.13.0"
  }
}
